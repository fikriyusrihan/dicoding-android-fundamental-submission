<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/iron_200</item>
        <item name="colorPrimaryVariant">@color/iron_500</item>
        <item name="colorOnPrimary">@color/dark_blue_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/desert_storm_200</item>
        <item name="colorSecondaryVariant">@color/desert_storm_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status & Navigation bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">@color/dark_blue_200</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_blue_200</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg_dark</item>
        <!-- Status & Navigation bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_blue_200</item>
        <item name="android:navigationBarColor">@color/dark_blue_200</item>
    </style>

    <style name="ImageLogo">
        <item name="android:src">@drawable/github_logo_white</item>
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="contentDescription">@string/github_logo</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTitle.Profile">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Stats">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/_24</item>
    </style>

    <style name="TextCard">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>